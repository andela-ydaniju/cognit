<div class="row">
  <div class="col-xs-12">
    <div class="row center-xs middle-xs" style="min-height: 96.2vh">
      <div class="col-xs-12">
        <div class="box">
          <div class="row center-xs">
            <form action="/process_insights" method="post" class="form-horizontal col-xs-8 slabo" style="background-color: rgba(0,0,0,.2); position: relative; padding: 30px 0; z-index: 999; color: rgba(176,96,59,1)">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
              <div class="form-group">
                <div class="row center-xs">
                  <div class="col-xs-6">
                    <label class="col-xs-6 form-label">Monthly Salary:</label>
                      <input type="text" name="monthly_salary" class="form-control" required>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row center-xs">
                  <div class="col-xs-6">
                    <label class="col-xs-6 form-label">Skills</label>
                      <textarea name="skills" class="form-control" required></textarea>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row center-xs">
                  <div class="col-xs-6">
                    <label class="col-xs-6 form-label">interests</label>
                      <input type="text" name="interests" class="form-control" required>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row center-xs">
                  <div class="col-xs-6">
                    <button type="submit" class="twitter-btn pt-mono border" style= "padding: 20px 50px">Submit</button>
                  </div>
                </div>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>